
<h3> Spooky Signup </h3>
🦇🦇🦇🦇🦇🦇🦇🦇🦇🦇
<%= form_for @user do |f|  %>
<%= f.label :email %>
<%= f.text_field :email %>
<%= f.label :password %>
<%= f.password_field :password %><br></br>
☠️<%= f.submit "signup... if you dare!!" %>☠️
<% end %>
<br></br>
<h3>Ominous Login</h3>
🦇🦇🦇🦇🦇🦇🦇🦇🦇🦇
<%= form_tag "/login" do %>

  <%= label_tag "user[email]", "email"  %>
  <%= text_field_tag "user[email]" %>

  <%= label_tag "user[password]", "password" %>
  <%= password_field_tag "user[password]" %><br></br>

<%= button_tag "login" %>
<% end %>
